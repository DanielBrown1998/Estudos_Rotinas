#:import Tabs tabs.Tabs
#:import Info intro.Info
#:import PopUpScreen tabs.PopUpScreen

<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<Principal>
    orientation: 'vertical'
    id: principal
    MDLabel:
        id: title
        text:
            'atribuir tarefa' if root.ids.screen_manager.current == 'popup' \
            else root.ids.screen_manager.current
        theme_text_color: 'Custom'
        text_color: app.background
        theme_font_size: "Custom"
        font_size: "50sp"
        bold: True
        halign: 'center'
        valign: 'center'
        size_hint: 1., None
        height: '100dp'
        theme_bg_color: "Custom"
        md_bg_color: app.background_two
        elevation: 30
        opacity: .6
    Manager:
        id: screen_manager
        md_bg_color: app.background
        Info:
            name: app.title
        Tabs:
            name: 'segunda'
        Tabs:
            name: 'terça'
        Tabs:
            name: 'quarta'
        Tabs:
            name: 'quinta'
        Tabs:
            name: 'sexta'
        Tabs:
            name: 'sabado'
        Tabs:
            name: 'domingo'
        PopUpScreen:
            name: 'popup'
            day: root.ids.screen_manager.screen_previous

    Nav:
        id: nav
        on_switch_tabs: app.on_switch_tabs(*args)
        indicator_color: app.background_two
        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: app.title

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'segunda'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'terça'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'quarta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'quinta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'sexta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'sabado'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'domingo'
