#:import Tabs tabs.Tabs
#:import Info intro.Info

<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<Principal>
    orientation: 'vertical'
    MDLabel:
        id: title
        text: root.ids.screen_manager.current
        theme_text_color: 'Custom'
        text_color: app.background
        theme_font_size: "Custom"
        font_size: "30sp"
        bold: True
        halign: 'center'
        valign: 'center'
        size_hint: 1., None
        height: '50dp'
        theme_bg_color: "Custom"
        md_bg_color: app.background_two
    MDScreenManager:
        id: screen_manager
        md_bg_color: app.background
        Info:
            name: 'info'
        Tabs:
            name: 'segunda'
        Tabs:
            name: 'terça'
        Tabs:
            name: 'quarta'
        Tabs:
            name: 'quinta'
        Tabs:
            name: 'sexta'
        Tabs:
            name: 'sabado'
        Tabs:
            name: 'domingo'
    Nav:
        id: nav
        on_switch_tabs: app.on_switch_tabs(*args)
        indicator_color: app.background_two
        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: "info"
            active: True
        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'segunda'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'terça'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'quarta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'quinta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'sexta'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'sabado'

        BaseMDNavigationItem:
            icon: "circle" if root.ids.screen_manager.current == self.text else "circle-outline"
            text: 'domindo'