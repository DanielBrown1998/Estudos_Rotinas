<Intro@MDSwiperItem>:
    image: root.image
    padding: dp(12)
    MDCard:
        style: 'elevated'
        pos_hint: {"center_x": .5, "center_y": .5}
        id: info
        size_hint: 1., 1.
        orientation: 'vertical'

        FitImage:
            source: root.image
            size_hint: 1., .55
            radius: "12dp", "12dp", 0, 0
        MDLabel:
            padding: '20dp'
            halign: 'center'
            valign: 'center'
            size_hint: 1., .45
            theme_font_size:
            font_size: '20sp'
            bold: True
            md_bg_color: app.background
            text: 'Esse App destina-se exclusivamente àqueles(as) que desejam organizar seu planejamento do dia-a-dia'

<Check>
    size_hint: None, None
    size: dp(40), dp(40)
    on_active: self.on_checkbox_active(*args)


<Select@MDBoxLayout>
    padding: dp(20)
    MDLabel:
        id: texto
        text: 'opção'
        halign: 'center'
        valign: 'bottom'
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: root.width, root.height
    Check:
        id: check
        active: False
        pos_hint: {"right": 1., "center_y": .5}


