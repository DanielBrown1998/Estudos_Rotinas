#:import get_color_from_hex kivy.utils.get_color_from_hex

<Dados>
    icon: ''
    text: ''
    dados_color: app.color_font_focus
    line_color: 'grey'
    type: 'assist'
    elevation: 1
    shadow_softness: 2
    MDChipLeadingIcon:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color:  root.dados_color
    MDChipText:
        text: root.text
        theme_text_color: 'Custom'
        text_color: root.dados_color

<Intro>
    image: root.image
    padding: dp(12)
    MDCard:
        style: 'elevated'
        pos_hint: {"center_x": .5, "center_y": .5}
        id: info
        size_hint: 1., 1.
        orientation: 'vertical'

        FitImage:
            source: root.image
            size_hint: 1., .5
            radius: "12dp", "12dp", 0, 0

        MDLabel:
            padding: '20dp'
            halign: 'center'
            valign: 'center'
            size_hint: 1., .3
            theme_font_size: "Custom"
            font_size: '20sp'
            bold: True
            text: 'Esse App destina-se exclusivamente àqueles(as) que desejam organizar seu planejamento do dia-a-dia'

<Item>

    MDListItemLeadingIcon:
        icon: root.icon

    MDListItemHeadlineText:
        text: root.principal_text

    MDListItemSupportingText:
        text: root.support_text


<Config>
    padding: dp(12)
    MDCard:
        style: 'elevated'
        pos_hint: {"center_x": .5, "center_y": .5}
        id: info
        spacing: "10dp"
        size_hint: 1., 1.
        orientation: 'vertical'
        MDLabel:
            padding: 0, '10dp', 0, '5dp'
            text: 'Orientações'
            theme_font_size: 'Custom'
            valign: "center"
            halign: "center"
            size_hint: 1., None
            height: "30sp"
            font_size: '20sp'
            bold: True
        Item:
            icon: 'plus'
            principal_text: 'Adicionar tarefa'
            support_text: 'pressione o botão com o icone ao lado'

        Item:
            icon: 'check'
            principal_text: 'Check'
            support_text: 'aperte o box para marcar como concluída'

        Item:
            icon: 'multiplication'
            principal_text: 'Excluir tarefa'
            support_text: 'pressione o widget por 3 segundos'

        MDBoxLayout:
            spacing: "10dp"
            size_hint: 1., 1.
            padding: '5dp', '20dp'
            orientation: 'vertical'
            MDLabel:
                text: 'Configurações'
                theme_font_size: 'Custom'
                valign: "center"
                halign: "center"
                size_hint: 1., None
                height: "30sp"
                font_size: '20sp'
                bold: True
            Dados:
                icon:
                    'circle-outline' if app.theme_cls.theme_style == 'Light' \
                    else "flare"
                text: 'alterar tema'
                on_press:
                    app.theme_cls.theme_style = 'Dark' \
                    if app.theme_cls.theme_style == 'Light' \
                    else 'Light'

            Dados:
                icon: 'delete'
                text: 'apagar todos os dados'
                dados_color: app.theme_cls.errorColor
                on_press: app.delete_data()

            Dados:
                icon: 'restore'
                text: 'restaurar todos os dados'
                on_press: app.restore_data()

<Body>
    width_mult: 1.1
    Intro:
        image: "assets/images/image.jpg"
    Config:

<Info>
    Body:
