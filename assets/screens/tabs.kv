<MyButton>
    icon: 'circle-outline'
    style: 'standard'
    theme_font_size: "Custom"
    font_size: "30sp"
    radius: [self.height / 2, ]
    size_hint: None, None
    size: "40dp", "40dp"
    on_press: self.icon = 'circle' if self.icon == 'circle-outline' else 'circle-outline'


<Disciplina>
    style: "elevated"
    size_hint: None, None
    pos_hint_x: {"center_x": .5}
    height: '50dp'
    Content:
        id: relative
        MDLabel:
            id: hora
            text: root.hora
            pos_hint: {"center_x":.6, "top": 1.}

        MDLabel:
            id: texto
            text: root.text
            adaptive_size: True
            pos_hint: {"center_x": .6, "top": .6}
            color: "grey"
            bold: True

        MyButton:
            id: check
            pos_hint: {"right": 1., "center_y": .5}
            on_release: root.ids.texto.text = 'pressionei' if root.ids.texto.text == '' else ''


<Day>
