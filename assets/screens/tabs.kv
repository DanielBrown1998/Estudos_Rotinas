<Disciplina@MDTextField>:
    mode: "outlined"
    theme_text_color: "Custom"
    text_color_normal: app.color_font
    text_color_focus: app.color_font_focus
    theme_line_color: "Custom"
    line_color_normal: app.color_font
    theme_bg_color: "Custom"
    fill_color_normal: app.background
    multiline: False
    size_hint: .8, None
    height: '40sp'

<MyButton>
    icon: "pencil-outline"
    style: "standard"
#    style: 'outlined'
    size_hint: None, None
    width: '50sp'
    height: '50sp'
#    pos_hint: {"center_x": .5, "center_y": .5}
    theme_shadow_color: "Custom"
    shadow_color: app.color_shadow
    theme_icon_color: "Custom"
    icon_color: app.background
    color_map: 'secondary'

<Day>
    id: root.name
    md_bg_color: app.background
    size_hint: 1., None
    spacing: '25dp'
    padding: '20dp'
    height: self.minimum_height
    orientation: 'lr-tb'


<Tabs>
    Scroll:
        do_scroll_x: False
        do_scroll_y: True
