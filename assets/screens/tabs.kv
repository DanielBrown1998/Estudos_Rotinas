#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window

<PopupButton>

<ContentPopUp>

<PopUpCard>
    title: f"{self.day}"
    size_hint: None, None
    size: '320dp', '320dp'
    padding: '24dp'
    radius: ["24dp"]
    pos_hint: {'center_x': .5, 'center_y': .5}
    ContentPopUp:
        orientation: 'vertical'
        padding: '10dp'
        MDLabel:
            id: hora
            text: root.hora
            bold: True
            text_size: '30sp'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('#FFFFFF')
            font_style: 'Title'
            role: 'large'
            valign: 'center'
            halign: 'center'
            size_hint_y: .2

        MDFloatLayout:
            id: box
            size_hint_y: .3
            MDTextField:
                id: tarefa
                mode: 'outlined'
                size_hint_y: None
                height: '30dp'
                size_hint_x: .95
                pos_hint: {"center_x": .5, "center_y": .75}
                theme_text_color: "Custom"
                text_color_focus: self.text_color_normal
                text_color_normal: get_color_from_hex("#FFFFFF")
                multiline: False
                MDTextFieldHintText:
                    theme_text_color: "Custom"
                    text_color_focus: self.text_color_normal
                    text_color_normal: get_color_from_hex("#FFFFFF")
                    text: "tarefa"
                MDTextFieldMaxLengthText:
                    text_color_normal: get_color_from_hex("#FFFFFF")
                    theme_text_color: "Custom"
                    text_color_focus: self.text_color_normal
                    max_text_length: 20

        MDLabel:
            id: atention
            size_hint_y: .3
            text_size: '5sp'
            valign: 'top'
            halign: 'left'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('#FF0000')

        PopupButton:
            style: 'elevated'
            tarefa: root.ids.tarefa.text
            day: root.day
            hora: root.hora
            on_press:
                app.root.ids[self.day].ids[f'content_{root.hora[:2]}'].ids.texto.text = \
                self.tarefa.strip().capitalize() \
                if len(root.ids.tarefa.text) <= 20 else ''; \
                root.ids.atention.text = 'atente-se ao limite de caracteres' \
                if len(root.ids.tarefa.text) >= 20 else ''
            on_release: root.dismiss() if len(root.ids.tarefa.text) <=20 else None
            pos_hint: {"center_x": .5, "center_y": .1}
            MDButtonIcon:
                icon: 'plus'
            MDButtonText:
                text: 'add'

<Texto>
    adaptive_size: True
    pos_hint: {"center_x": .6, "top": .6}
    halign: 'left'
    valign: 'center'
    theme_text_color: 'Custom'
    text_color: get_color_from_hex('#111111')
    bold: True

<Check>
    size_hint: None, None
    size: "40dp", "40dp"


<Content>
    MDLabel:
        id: hora
        text: root.hora
        pos_hint: {"center_x":.6, "top": 1.}

    Texto:
        id: texto
        pos_hint: {"center_x":.5, "center_y": .5}

    Check:
        id: check
        active: False
        on_active: self.on_checkbox_active(*args)
        pos_hint: {"right": .85, "center_y": .5}

    ContentButton:
        id: content_button
        on_press: self.update_data(root.ids.hora.text)  #; print(app.root.ids[root.name_tab])
#        on_release: print(app.root.ids[root.name_tab].ids[f'content_{root.ids.hora.text[:2]}'])
        pos_hint: {"right": .95, "center_y": .5}
        style: 'standard'
        icon: 'plus'

<Disciplina>
    style: "elevated"
    size_hint: None, None
    pos_hint_x: {"center_x": .5}
    height: '50dp'

<Day>
    md_bg_color: app.background
    size_hint: 1., None
    spacing: '25dp'
    padding: '20dp'
    height: self.minimum_height
    orientation: 'lr-tb'
    pos_hint_x: {"center_x": .5}


