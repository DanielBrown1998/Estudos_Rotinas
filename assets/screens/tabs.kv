<Check>
    size_hint: None, None
    size: "40dp", "40dp"


<Disciplina>
    style: "elevated"
    size_hint: None, None
    pos_hint_x: {"center_x": .5}
    height: '50dp'
    Content:
        id: relative
        MDLabel:
            id: hora
            text: root.hora
            pos_hint: {"center_x":.6, "top": 1.}

        MDLabel:
            id: texto
            text: root.text
            adaptive_size: True
            pos_hint: {"center_x": .6, "top": .6}
            color: "grey"
            bold: True

        Check:
            id: check
            active: False
            on_active: self.on_checkbox_active(*args)
            pos_hint: {"right": .95, "center_y": .5}


